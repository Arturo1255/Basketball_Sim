<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/app_name"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/homeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="@string/home_team"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/awayTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleName"
        android:layout_alignTop="@+id/homeTeamName"
        android:layout_marginEnd="30dp"
        android:text="@string/away_team"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/homeTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/homeTeamName"
        android:layout_below="@+id/homeTeamName"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20sp"
        android:text="@string/default_score"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/awayTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/awayTeamName"
        android:layout_below="@+id/awayTeamName"
        android:layout_alignTop="@+id/homeTeamScore"
        android:layout_marginStart="60dp"
        android:text="@string/default_score"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeTeamScore"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/playButton" />



</RelativeLayout>